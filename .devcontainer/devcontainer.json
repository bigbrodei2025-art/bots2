{
  "name": "Node.js Codespace",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:0-18", // Essa imagem base pode ser genérica ou atualizada conforme o necessário
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "24.8.0"
    }
  },
  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": {
      "label": "Aplicação Node.js",
      "onAutoForward": "notify",
      "protocol": "http",
      "public": true
    }
  },
  "postCreateCommand": "npm install"
}
